.jira-selector {
    border: round $primary-lighten-3;
    padding: 0 1;
}

.rule-50 {
    width: 100%;
    content-align: right middle;
    margin: 1 50 1 50;
}

.rule-horizontal-compact-70 {
    height: 1;
    margin: 0 0;
    width: 70%;
}

/* Application - Layout */

#main-container {
    height: auto;
}

#run-button {
    max-width: 10;
}

#search_results_container {
    border: round $primary-lighten-3;
    background: transparent;
}

#tabs {
    width: 1fr;
}

.bottom-search-bar {
    grid-size: 7 1;
    grid-columns: 15% 12% 12% 12% 13% 30% 6%;
}

.cols-3 {
    column-span: 3;
}

.cols-2 {
    column-span: 2;
}

/* Search Results */

#search_results {
    background: transparent;
    scrollbar-size-vertical: 1;
}

/* Search Filters */

#jira-issue-types-selector {
    width: 20%;
}

#jira-issue-status-selector {
    width: 20%;
}

#jira-users-selector {
    width: 30%;
}

.work-item-key {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    width: 25;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

.input-date {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    width: 18;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* JQL Expression */

#input_search_term {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    width: 100%;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* Active Sprint Checkbox */

.active-sprint-checkbox {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    width: 100%;
    margin: 0 0;
    padding: 0 0;
    background: $background;
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* Tab Pane - Subtasks */

IssueChildWorkItemsWidget {
    hatch: right $success 20%;
}

/* Tab Pane - Remote Links */

IssueRemoteLinksWidget {
    hatch: right $success 20%;
}

/* Tab Pane - Attachments */

IssueAttachmentsWidget {
    hatch: right $success 20%;
}

/* Tab Pane - Related Work Items */

RelatedIssuesWidget {
    hatch: right $success 20%;
}

/* Tab Pane - Comments */

IssueCommentsWidget {
    hatch: right $success 20%;
}

/* Tab Pane - Description */

.summary-description-container {
    height: 100;
    margin: 0 0;
}

/* margin: top right bottom left*/
.summary-description-rule {
    margin: 1 0 0 0;
}

IssueDescriptionWidget {
    background: transparent;
    margin: 0 0;
}

/*  Work Item Details */

#issue-details-form {
    layout: grid;
    grid-size: 3 9;
    grid-rows: auto;
}

#jira-users-assignee-selector-edit {
    border: round $accent;
    padding: 0 1;
}

#jira-issue-status-selector-edit {
    border: round $accent;
    padding: 0 1;
}

.issue_details_input_field {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

IssueParentField {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
    &.issue_key {
        width: 15;
    }
}

IssueDetailsPrioritySelection {
    border: round $accent;
    padding: 0 1;
}

WorkItemDetailsDueDate {
    box_sizing: content-box;
    height: 1;
    border: round $accent;
    width: 20;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* Help Screen */

HelpScreen > MarkdownViewer {
    width: 80%;
    height: 95%;
    border: round $foreground;
    background: $background 70%;
    padding: 0 1;
    border-title-align: center;
    scrollbar-size-vertical: 1;
    margin-top: 1;
}

CustomTitle {
    layout: vertical;
    height: auto;
    align: center middle;
}
CustomTitle > Rule {
    color: $primary;
}
CustomTitle > Rule.-horizontal {
    height: 1;
    margin: 0 0;
    width: 1fr;
    padding: 0 0;
}

/* Quit Screen */

QuitScreen {
    align: center middle;
}
QuitScreen > Grid {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

/* Modal Screens - Buttons and Question Label */

#question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

#button-quit {
    width: 100%;
}

#button-cancel {
    width: 100%;
}

/* Work Item (read-only) Details Screen */

WorkItemReadOnlyDetailsScreen {
    align: center middle;
    background: $background 80%;
}

WorkItemReadOnlyDetailsScreen > VerticalScroll {
    width: 70%;
    height: 85%;
    border: round $foreground;
    padding: 0 1;
}

#work-item-readonly-details-dt {
    background: transparent;
}

/* New Comment Screen */

AddCommentScreen {
    align: center middle;
    background: $background 80%;
}
AddCommentScreen > Vertical {
    width: 50%;
    height: 40%;
    border: round $foreground;
    padding: 0 1;
    & > TextArea {
        margin-top: 1;
        scrollbar-size-vertical: 1;
    }
    & > ItemGrid {
        margin-top: 1;
    }
}
#add-comment-button-save {
    width: 20%;
    padding: 0 0;
    box_sizing: content-box;
    border-top: blank $surface-lighten-1;
    border-bottom: blank $surface-lighten-1;
}
#add-comment-button-quit {
    width: 20%;
    padding: 0 0;
    box_sizing: content-box;
    border-top: blank $surface-lighten-1;
    border-bottom: blank $surface-lighten-1;
}

.add-comment-grid-buttons {
    grid-size: 2 1;
    grid-columns: 50% 50%;
    align: center middle;
}

/* Add Remote Link Screen */

AddRemoteLinkScreen {
    align: center middle;
