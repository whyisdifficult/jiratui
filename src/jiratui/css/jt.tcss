/* Confirmation Screen */

ConfirmationScreen {
    align: center middle;
}
ConfirmationScreen > Grid {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#confirmation-question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

#confirmation-button-accept {
    width: 100%;
}

#confirmation-button-cancel {
    width: 100%;
}

/* New Attachment Screen */

AddAttachmentScreen {
    align: center middle;
    background: $background 70%;
}
AddAttachmentScreen > Vertical {
    width: 70%;
    height: auto;
    border: round $foreground;
    padding: 0 1;
    & > Static {
        margin-top: 1;
    }
}

#attachment-directory-tree {
    background: $background 60%;
    hatch: right $success 20%;
    border: round $primary;
}

.add-attachment-grid-buttons {
    grid-size: 2 1;
    grid-columns: 50% 50%;
    align: center middle;
}

#add-attachment-button-save {
    width: 20%;
    padding: 0 0;
    box_sizing: content-box;
    border-top: blank $surface-lighten-1;
    border-bottom: blank $surface-lighten-1;
}

#add-attachment-button-quit {
    width: 20%;
    padding: 0 0;
    box_sizing: content-box;
    border-top: blank $surface-lighten-1;
    border-bottom: blank $surface-lighten-1;
}

FileNameInputWidget {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    width: 90%;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* Server Information Screen */

ServerInfoScreen {
    align: center middle;
    background: $background 80%;
}

ServerInfoScreen > VerticalScroll {
    width: 60%;
    height: 100%;
    border: round $foreground;
    padding: 0 1;
    scrollbar-size-vertical: 1;
}
ServerInfoScreen > VerticalScroll > DataTable {
    background: transparent;
}

/* Configuration Settings Screen */

ConfigFileScreen {
    align: center middle;
    background: $background 80%;
}

ConfigFileScreen > Vertical {
    width: 70%;
    height: 100%;
    border: round $foreground;
    padding: 0 1;
}
ConfigFileScreen > Vertical > DataTable {
    background: transparent;
    height: 50%;
    scrollbar-size-vertical: 1;
    margin-top: 1
}

.config-file-textarea {
    margin-top: 1;
    background: $background;
    scrollbar-size-vertical: 1;
    border: solid $accent;
}

/* Subtasks */

ChildWorkItemCollapsible {
    border: round $accent;
    background: transparent;
    padding-bottom: 0;
    & > Contents {
        padding: 1 0 0 3;
    }
}

/* Related Work Items */

RelatedIssueCollapsible {
    border: round $primary;
    background: transparent;
    padding: 0 0 0 0;
    &.lowes-priority {
        border: round grey;
    }
    &.low-priority {
        border: round yellow;
    }
    &.medium-priority {
        border: round purple;
    }
    &.high-priority {
        border: round orange;
    }
    &.highest-priority {
        border: round red;
    }
}

/* Comments */

CommentCollapsible {
    border: round $accent;
    background: transparent;
    padding-bottom: 0;
    & > Contents {
        padding: 1 0 0 3;
    }
}

/* Remote Links */

IssueRemoteLinkCollapsible {
    border: round $accent;
    background: transparent;
    padding-bottom: 0;
    & > Contents {
        padding: 1 0 0 3;
    }
}

/* JQL Editor */

JQLEditorScreen {
    align: center middle;
}

JQLEditorScreen > Vertical {
    width: 60%;
    height: 70%;
    border: round $foreground;
    background: $background 70%;
    padding: 0 1;
}

.jql-expression-editor {
    box_sizing: border-box;
    border: round $primary-lighten-3;
    margin: 0 0 1 0;
    width: 100%;
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* Work Item Information (description, summary and custom fields) */

#work-item-info-description-scroll-container {
    border: solid $secondary-lighten-3;
    padding: 0 0 0 0;
    scrollbar-size-vertical: 1;
}

#work-item-info-extra-scroll-container {
    border: solid $secondary;
    scrollbar-size-vertical: 1;
}

.summary-description-container {
    height: auto;
    margin: 0 0;
    padding: 0 0;
}

.work-item-info-custom-field-textarea {
    border-top: solid $secondary-lighten-3;
    margin: 0 0;
    padding: 0 0;
}

MarkdownFence {
    background: $surface;
}

WorkItemSummaryContainer {
    border-left: solid $secondary-lighten-3;
    height: auto;
    margin-bottom: 1;
    color: $text;
    text-style: italic;
}

DataTableSearchInput {
    border: solid $primary;
    background: transparent;
    padding: 0 1 0 1;
    box_sizing: border-box;
}

/* Text Search Screen */
TextSearchScreen {
    align: center middle;
}
TextSearchScreen > Input {
    padding: 1 1 0 1;
    width: 50%;
    height: 5;
    border: round $primary;
    background: transparent;
}

/* Screen to display attached files */
ViewAttachmentScreen {
    align: center middle;
    background: $background 80%;
}

ViewAttachmentScreen > VerticalScroll {
    width: 70%;
    height: 70%;
    border: round $foreground;
    padding: 0 0;
    scrollbar-size-vertical: 1;
}

ViewAttachmentScreen > VerticalScroll > Center > Image {
    background: transparent;
    width: auto;
    height: auto;
}

ViewAttachmentScreen > VerticalScroll > Center {
    & Markdown, TextArea {
        background: transparent;
        width: 100%;
        height: auto;
        align: center top;
    }
    & LoadingIndicator {
        align: center middle;
    }
}

/* Screen to create git branches */
GitScreen {
    align: center middle;
    background: $background 80%;
}

GitScreen > Vertical {
    width: 70%;
    height: 50%;
    border: round $foreground;
    padding: 1 1;
    scrollbar-size-vertical: 1;
}

#target-repo-message {
    color: $success;
    padding: 0 1;
}

#error-message {
    color: $error;
    padding: 0 1;
}

GitBranchNameInput {
    box_sizing: content-box;
    height: 1;
    border: round $accent;
    width: 60;
    margin: 1 0;
    padding: 0 1;
    background: $background;
    &:focus {
        border: round $accent-lighten-3;
    }
}

GitRepositorySelectionWidget {
    border: round $accent;
    padding: 0 1;
}

/* Screen for logging work */

LogWorkScreen {
    align: center middle;
    background: $background 80%;
}

LogWorkScreen > Vertical {
    width: 55%;
    height: 50%;
    border: round $foreground;
    background: transparent;
    padding: 1 1;
    scrollbar-size-vertical: 1;
    & .log-work-time-input-grid {
        grid-size: 2 1;
        grid-columns: 50% 50%;
        align: center middle;
    }
    & .log-work-buttons-grid {
        grid-size: 2 1;
        grid-columns: 50% 50%;
        align: center middle;
    }
    & .log-work-date-hint-grid {
        grid-size: 2 1;
        grid-columns: 50% 50%;
        align: left middle;
    }
}

TimeSpentInput, TimeRemainingInput {
    box_sizing: content-box;
    height: 1;
    border: round $primary-lighten-3;
    width: 100%;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    &.required {
        border: round red;
    }
    &:focus {
        border: round $accent-lighten-3;
    }
}

WorkDescription {
    background: transparent;
    border: round $primary-lighten-3;
    scrollbar-size-vertical: 1;
}

/* Time Tracking */

TimeTrackingWidget {
    box_sizing: content-box;
    height: 2;
    border: round $secondary-lighten-3;
    margin: 0 0;
    padding: 0 1;
    background: $background;
    align-horizontal: left;
    &:focus {
        border: round $accent-lighten-3;
    }
}

/* Worklog Screen */

WorkItemWorkLogScreen {
    align: center middle;
    background: $background 80%;
}

WorkItemWorkLogScreen > Vertical {
    width: 60%;
    height: 75%;
    border: round $foreground;
    padding: 0 1;
    & > VerticalScroll {
        scrollbar-size-vertical: 1;
    }
}

WorkLogCollapsible {
    border: round $primary;
    background: transparent;
    padding-bottom: 0;
}
